# Configurações do Servidor
NODE_ENV=development
PORT=5001

# Configurações do Banco de Dados PostgreSQL
PGUSER=postgres
PGHOST=localhost
PGPASSWORD=postgres
PGDATABASE=agrosmart
PGPORT=5432

# Configurações de Sessão
SESSION_SECRET=sua_chave_secreta_aqui

# Configurações JWT
JWT_SECRET=sua_chave_jwt_secreta
JWT_EXPIRES_IN=24h

# Configurações de E-mail (para envio de códigos de verificação)
SMTP_HOST=smtp.exemplo.com
SMTP_PORT=587
SMTP_USER=seu_email@exemplo.com
SMTP_PASS=sua_senha_de_email
SMTP_FROM=AgroSmart <noreply@agrosmart.com>

# Configurações do WhatsApp (Vonage)
VONAGE_API_KEY=sua_chave_api
VONAGE_API_SECRET=sua_chave_secreta
VONAGE_BRAND_NAME=AgroSmart

# Configurações do reCAPTCHA
RECAPTCHA_SECRET_KEY=sua_chave_secreta_recaptcha
RECAPTCHA_MIN_SCORE=0.5

# URL do Frontend (para CORS)
FRONTEND_URL=http://localhost:3000

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configurações de Segurança
RATE_LIMIT_WINDOW_MS=900000  // 15 minutos
RATE_LIMIT_MAX_REQUESTS=100  // 100 requisições por janela

# Configurações de 2FA
TWO_FACTOR_CODE_EXPIRY=300  // 5 minutos em segundos
MAX_LOGIN_ATTEMPTS=5         // Tentativas máximas de login
LOGIN_BLOCK_TIME=10          // Tempo de bloqueio em segundos
