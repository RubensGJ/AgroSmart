# Configurações do Banco de Dados PostgreSQL
PGUSER=postgres
PGHOST=localhost
PGDATABASE=agrosmart
PGPASSWORD=sua_senha_aqui
PGPORT=5432

# Configurações do Servidor
PORT=5001
NODE_ENV=development

# Chaves de Autenticação
JWT_SECRET=sua_chave_secreta_aqui
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=sua_chave_de_refresh_secreta_aqui
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de Email (Obrigatório para 2FA via Email)
EMAIL_HOST=smtp.exemplo.com
EMAIL_PORT=587
EMAIL_USER=seu_email@exemplo.com
EMAIL_PASSWORD=sua_senha_de_email
EMAIL_FROM=noreply@agrosmart.com

# Configurações do Vonage (Nexmo) para WhatsApp (Obrigatório para 2FA via WhatsApp)
VONAGE_API_KEY=seu_api_key
VONAGE_API_SECRET=seu_api_secret
VONAGE_BRAND_NAME=AgroSmart

# Configurações do reCAPTCHA (Google reCAPTCHA v2)
RECAPTCHA_SECRET_KEY=sua_chave_secreta_recaptcha
RECAPTCHA_SITE_KEY=sua_chave_do_site_recaptcha

# Configurações do 2FA
TWO_FACTOR_CODE_EXPIRY=300 # Tempo de expiração do código em segundos (padrão: 5 minutos)
TWO_FACTOR_ATTEMPTS_LIMIT=3 # Número máximo de tentativas de verificação
TWO_FACTOR_BLOCK_TIME=1800 # Tempo de bloqueio após exceder tentativas (em segundos)
